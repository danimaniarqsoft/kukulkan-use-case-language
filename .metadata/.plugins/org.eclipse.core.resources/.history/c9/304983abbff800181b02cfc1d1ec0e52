grammar mx.kukulkan.dsl.usecase.UseCase with org.eclipse.xtext.common.Terminals

generate useCase "http://www.kukulkan.mx/dsl/usecase/UseCase"

RequirementsUseCaseModel:
	(actors+=Actor)+
	(data+=Concept)*
	(usecases+=UseCase)+;

Actor:
	"Actor:" name=ID description=STRING?;

Concept:
	"DataConcept:" name=ID conceptDescription=STRING?;

UseCase:
	"UseCase:" name=ID useCaseName=STRING?
	(actors+=[Actor])*
	(concepts+=[Concept])*
	(useCasesFlow+=UseCaseFlow)*;

UseCaseFlow:
	"UseCaseFlow:"
	(completeActionsBlock+=CompleteActionBlock)*;

CompleteActionBlock:
	"CompleteActionBlock:"
	(userActionsBlock+=UserActionBlock)*
	(systemActionsBlock+=SystemActionBlock)*;

UserActionBlock:
	"UserActionBlock";

