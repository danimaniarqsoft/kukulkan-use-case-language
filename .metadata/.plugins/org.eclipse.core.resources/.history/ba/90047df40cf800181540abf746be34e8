grammar mx.infotec.dsl.UseCase with org.eclipse.xtext.common.Terminals

generate useCase "http://www.infotec.mx/dsl/UseCase"

RequirementsUseCaseModel:
	(actors+=Actor)+
	(data+=Concept)*
	(usecases+=UseCase)+;

Actor:
	"Actor:" name=ID description=STRING?;

Concept:
	"DataConcept:" name=ID conceptDescription=STRING?;

CompleteActionBlock:
	(userActionBlock=UserActionBlock)
	(systemActionBlock=SystemActionBlock);

SystemActionBlock:
	"SYSTEM ACTIONS:"
	"VALIDATE: "
	(rules=[Concept] "rule" description=STRING)*
	"EXECUTE: "
	systemOperation=APSOOperation
	"RESPONSE:"
	(ia=IAResponse)
	"END SYSTEM ACTIONS";